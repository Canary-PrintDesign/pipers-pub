<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="x-ua-compatible" content="ie=edge">
		<meta name="viewport"
					content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<meta name="description"
					content="Pipers Pub - A sports pub with a West Coast First Nations feel">
		<meta name="keywords"
					content="nanaimo, pub, beer, ufc, fight, restaurant, dinner, lunch, food, drink">
		<link rel="stylesheet" media="screen" href="/fonts/icomoon/icomoon.css" type="text/css"/>
		<link rel="stylesheet" media="screen" href="/fonts/glyphicons/glyphicons.css" type="text/css"/>
		<link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700|Pinyon+Script" rel="stylesheet">
		<script src="https://code.jquery.com/jquery-2.2.4.min.js"></script>
		<!-- Use the title from a page's frontmatter if it has one -->
		<title><%= current_page.data.title || "Pipers Pub" %></title>
		<%= stylesheet_link_tag "site.bundle" %>

	</head>

	<body class="<%= page_classes %>">
		<%= partial "partials/layouts/page_header_secondary" %>
		<%= partial "partials/layouts/home_hero" %>

		<%= yield %>

		<%= partial "partials/layouts/page_footer" %>
		<%= partial "partials/google_analytics" %>

		<script src="js/vendor/jquery.stellar.min.js"></script>

		<%= javascript_include_tag "site.bundle" %>



	</body>
</html>
